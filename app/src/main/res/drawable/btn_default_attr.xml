<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/buttonPressedDefault" android:centerX="0.5" android:centerY="0.9" android:endColor="@color/buttonPressedDefault" android:startColor="@color/buttonPressedDefault" />
            <stroke android:width="0dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:centerColor="@color/buttonReleasedDefault" android:centerX="0.5" android:centerY="0.9" android:endColor="@color/buttonReleasedDefault" android:startColor="@color/buttonReleasedDefault" />
            <stroke android:width="0dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>